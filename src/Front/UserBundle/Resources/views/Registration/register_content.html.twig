{% trans_default_domain 'FOSUserBundle' %}





<body class="blank">

<div class="row" >
<div class="register-container" display="center">

<div class="col-md-12">
    <div class="panel-body">
        <div class="top_site_main" style="color: #fff;background-color: rgba(45,51,57,0.95);background-image:url(../../../tpdm.foobla.netdna-cdn.com/elearningwp/wp-content/uploads/2015/06/banner.jpg);">
            <span class="overlay-top-header" style="background-color:rgba(45,51,57,0.95)"></span>		<div class="page-title-wrapper">
                <div class="banner-wrapper container">
                    <h1>Authentifier ou Inscrire</h1><div class="banner-description" style="color:#878787"><p> Authentifez vous si vous avez déjà un compte ou inscrivez-vous</p></div>			</div>
            </div>
        </div>

        <div class="col-md-2"> </div>
        <div class="col-md-8" class="container">
            <div class="text-center m-b-md">
                <h3>S'incrire</h3>
                <small>Remplir le formulaire. </small>
            </div>
            <div class="hpanel">

                    <form  id="loginForm" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="post" class="fos_user_registration_register">
                        <div class="row">
                            <div class="form-group col-lg-12">
                                <label>Adresse email</label>

                                {{ form_widget(form.email, {'attr': {'class':'form-control','placeholder' : 'Adresse mail'}} ) }}
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Username</label>

                                {{ form_widget(form.username, {'attr': {'class':'form-control','placeholder' : 'Username'}} ) }}
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Password</label>

                                {{ form_widget(form.plainPassword.first, {'attr': {'class':'form-control','placeholder' : 'First password'}} ) }}
                            </div>
                            <div class="form-group col-lg-6">
                                <label>Retaper password</label>

                                {{ form_widget(form.plainPassword.second, {'attr': {'class':'form-control','placeholder' : 'verifier password'}} ) }}
                            </div>

                            {{ form_widget(form) }}
                        </div>
                        <div class="text-center">
                            <input class="btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" />
                            <button class="btn btn-outline">Cancel</button>
                        </div>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>

        </div>

    <div class="col-md-2"></div>

</div>


</div>
</div>











<script src="{{ asset('jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('jquery-ui/jquery-ui.min.js') }}"></script>
<script src="{{ asset('slimScroll/jquery.slimscroll.min.js') }}"></script>
<script src="{{ asset('bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('metisMenu/dist/metisMenu.min.js') }}"></script>
<script src="{{ asset('iCheck/icheck.min.js') }}"></script>
<script src="{{ asset('sparkline/index.js') }}"></script>

<!-- App scripts -->
<script src="{{ asset('scripts/homer.js') }}"></script>